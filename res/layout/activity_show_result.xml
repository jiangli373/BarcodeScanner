<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/contentslable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:text="@string/contentslable" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/authorlabel"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/back"
        android:text="@string/authorlabel" />

    <TextView
        android:id="@+id/authorlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/contentslable"
        android:layout_marginTop="43dp"
        android:text="@string/authorlabel" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/authorlabel"
        android:layout_alignLeft="@+id/content"
        android:layout_alignParentRight="true"
        android:text="@string/authorlabel" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/back" />

    <TextView
        android:id="@+id/classlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/classlabel" />

    <TextView
        android:id="@+id/classnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/classlabel"
        android:layout_alignBottom="@+id/classlabel"
        android:layout_alignLeft="@+id/author"
        android:layout_alignParentRight="true"
        android:text="@string/classlabel" />

    <TextView
        android:id="@+id/positionlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/classlabel"
        android:layout_marginTop="46dp"
        android:text="@string/positionabel" />

    <TextView
        android:id="@+id/postion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/positionlabel"
        android:layout_alignBottom="@+id/positionlabel"
        android:layout_alignLeft="@+id/classnumber"
        android:layout_alignParentRight="true"
        android:text="@string/positionabel" />

</RelativeLayout>
